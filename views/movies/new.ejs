<%- include("../partials/header") %>

	<div class="container">
		<div style="margin-top:40px; margin-bottom: 40px;">
			<h1 style="text-align:center;">Search results</h1>
		</div>

		<form action="/movies" method="POST">
			<div class="form-row">
				<div class="form-group col-md-6">
					<img name="image" src="<%=data.image%>">
				</div>
				<div class="form-group col-md-4">
					<div class="form-row">
						<h4 name="name">
							<%=data.name%>
						</h4>
					</div>
					<div class="form-row">
						<p name="description">
							<%=data.description%>
						</p>
					</div>
					<div class="form-row">
						<a href = "/movies/<%= data._id %>/reviews/new" class = "btn btn-primary btn-sm">Add a review</a>
					</p>
					</div>
				</div>
				<div class="form-group col-md-2">
					<a href="/movies">Go Back</a>
				</div>
			</div>
		</form>


	</div>
	<%- include("../partials/footer") %>